#!/usr/bin/env bash

if [[ $# -lt 1 ]] ; then
    echo "Usage: $0 <cmd>"
    exit 1
fi

CMD="${@}"
RETURN=0

for PACKAGE in $(find src/*/composer.json -type f) ; do
    DIR=$(dirname ${PACKAGE})
    pushd "${DIR}" &> /dev/null
    LABEL="Running in \"${DIR}\""
    if [[ $TRAVIS = true ]] ; then
        tfold "${LABEL}" "${CMD}"
    else
        echo -e "\e[34m${LABEL}\e[0m"
        bash -xc "${CMD}" 2>&1
    fi
    LAST=$? ; [[ $LAST -ne 0 ]] && RETURN=${LAST}
    popd &> /dev/null
done

exit ${RETURN}
